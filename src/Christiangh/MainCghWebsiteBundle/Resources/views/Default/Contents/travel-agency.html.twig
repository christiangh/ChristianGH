{% extends 'ChristianghMainCghWebsiteBundle:Default:content.html.twig' %}

{% block angularApp %} ng-app="agency"{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('contents/travel-agency/css/style.css') }}" />
{% endblock %}

{% block topJavascripts %}
    {{ parent() }}
    <script src="{{ asset( 'js/angular-1.3.15.min.js' ) }}" type="text/javascript"></script>
    <script src="{{ asset( 'js/bower-angular-translate-2.7.0/angular-translate.min.js' ) }}" type="text/javascript"></script>
    <script src="{{ asset( 'contents/travel-agency/js/app.js' ) }}" type="text/javascript"></script>
    <script src="{{ asset( 'contents/travel-agency/js/directives.js' ) }}" type="text/javascript"></script>
    <script src="{{ asset( 'contents/travel-agency/js/controllers.js' ) }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div id="travel-agency-menu">
        <p>{{ 'content_travel_agency.title'| trans([], 'content_travel_agency') }}</p>
        <ul id="menu-listing">
            <li>{{ 'content_travel_agency.menu.flights'| trans([], 'content_travel_agency') }}</li>
            <li>{{ 'content_travel_agency.menu.hotels'| trans([], 'content_travel_agency') }}</li>
            <li>{{ 'content_travel_agency.menu.trips'| trans([], 'content_travel_agency') }}</li>
        </ul>
    </div>
    <div id="travel-agency-body" ng-controller="OpportunitiesController as opportunity">
        <opportunities-searcher></opportunities-searcher>

        <div id="body-listing" opportunities-listing></div>

        <div id="pagination" ng-hide="trips.length < 0">
            <a class="previous-trips normal-pagination" ng-click="previousPage()" ng-class="{'disabled':search.page === 1}">{{ 'content_travel_agency.pagination.previous'| trans([], 'content_travel_agency') }}</a>
            <a class="next-trips normal-pagination" ng-click="nextPage()" ng-class="{'disabled':search.page === lastPage}">{{ 'content_travel_agency.pagination.next'| trans([], 'content_travel_agency') }}</a>

            <a class="previous-trips mobile-pagination" ng-click="previousPage()" ng-class="{'disabled':search.page === 1}" href="#searcher-shower">{{ 'content_travel_agency.pagination.previous'| trans([], 'content_travel_agency') }}</a>
            <a class="next-trips mobile-pagination" ng-click="nextPage()" ng-class="{'disabled':search.page === lastPage}" href="#searcher-shower">{{ 'content_travel_agency.pagination.next'| trans([], 'content_travel_agency') }}</a>
        </div>
    </div>
    <div id="travel-agency-footer">
        <p>{{ 'content_travel_agency.footer.text'| trans([], 'content_travel_agency') }}.</p>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}