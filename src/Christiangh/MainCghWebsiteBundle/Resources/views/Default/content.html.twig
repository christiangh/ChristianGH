{% extends 'ChristianghMainCghWebsiteBundle::layout.html.twig' %}

{% block metas %}
    <title>ChristianGH - {{ content.getName(app.request.locale) }}</title>
    <meta name="description" content="{{ content.getDescription(app.request.locale) }}" />
    <meta name="keywords" content="{{ content.getKeywords(app.request.locale) }}" />
{% endblock %}


{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/content.css') }}" />
    <link rel="stylesheet" href="{{ asset('contents/'~content.getKey()~'/css/style.css') }}" />
{% endblock %}
 
{% block main %}

<main>
    <section id="content">
        <div id="content_presentation" class="normal_message">
        {% spaceless %}
            <h1 class="content_title"><span class="content_underlined">{{ content.getName(app.request.locale) }}</span></h1>
            <h2 class="content_category">{{ 'content.title.category'|trans }}: {{ content.getCategory.getName(app.request.locale) }}</h2>
            <h2 class="content_collection">{{ 'content.title.collection'|trans }}: {{ content.getCollection.getName(app.request.locale) }}</h2>
            <div class="come_listing">
                <div class="sticker"></div>
                <a href="{{ url('christiangh_main_cgh_website_contents') }}" title="{{ 'content.listing.title'|trans }}"><label>{{ 'content.listing.label'|trans }}</label></a>
            </div>
        {% endspaceless %}
        </div>
        
        <div id="content_frame" class="{{ content.getCategory().getClassKey() }}">
            {% if content.getCategory().getClassKey() == 'application_content' %}
                <div class="tablet_cam">
                    <div class="tablet_cam_interior"></div>
                </div>
                <div class="tablet_sensor_1"></div>
                <div class="tablet_sensor_2"></div>
            {% elseif content.getCategory().getClassKey() == 'resource_content' %}
                2
            {% else %}
                3
            {% endif %}
            <div id="content_area">
                {{ include('ChristianghMainCghWebsiteBundle:Default:Contents/'~content.getKey()~'.html.twig') }}
            </div>
            {% if content.getCategory().getClassKey() == 'application_content' %}
                <div class="tablet_button_border">
                    <div class="tablet_button">
                    </div>
                </div>
            {% elseif content.getCategory().getClassKey() == 'resource_content' %}
                2
            {% else %}
                3
            {% endif %}
        </div>
        
        <ul id="content_tags">
        {% for tag in content.getTagsArray() %}
            <li>
                <div class="sticker"></div>
                <label>#{{ tag }}</label>
            </li>
        {% endfor %}
        </ul>
    </section>
</main>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('contents/'~content.getKey()~'/js/javascript.js') }}" type="text/javascript"></script>
{% endblock %}